<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <a href="/logout">Log-out</a>
        <a href="/newPost" class="btn btn-info btn-sm">New Post</a>
        <hr>
        
        <% posts.forEach(post => { %>
            <div>
                <h4><%= post.title %></h4>
                <p><%= post.post %></p>
                <a href="/newComment/<%= post.id %>" class="btn btn-sm btn-info">Comment</a>
                <a href="/updatePost/<%= post.id %>" class="btn btn-sm btn-info">Update</a>
                <a href="/deletePost/<%= post.id %>" class="btn btn-sm btn-danger">Delete</a>
            </div>
        <% }) %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>